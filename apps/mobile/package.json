{
  "name": "@cards-after-dark/mobile",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace CardsAfterDark.xcworkspace -scheme CardsAfterDark -configuration Release -destination generic/platform=iOS -archivePath CardsAfterDark.xcarchive archive",
    "clean": "npx react-native-clean-project",
    "clean:android": "cd android && ./gradlew clean",
    "clean:ios": "cd ios && rm -rf build && rm -rf ~/Library/Developer/Xcode/DerivedData"
  },
  "dependencies": {
    "@apollo/client": "^3.8.7",
    "@cards-after-dark/graphql-schema": "*",
    "@cards-after-dark/shared": "*",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native-community/cli": "^13.6.0",
    "@react-native-firebase/app": "^18.6.2",
    "@react-native-firebase/messaging": "^18.6.2",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "expo": "^53.0.20",
    "graphql": "^16.8.1",
    "react": "18.2.0",
    "react-native": "0.81.0",
    "react-native-config": "^1.5.1",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-reanimated": "^3.6.1",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-screens": "^3.27.0",
    "react-native-vector-icons": "^10.0.3",
    "react-native-webview": "^13.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/cli-platform-android": "^13.6.0",
    "@react-native/eslint-config": "^0.73.0",
    "@react-native/gradle-plugin": "^0.81.0",
    "@react-native/metro-config": "^0.81.0",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.77.0",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native"
  }
}